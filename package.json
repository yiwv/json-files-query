{
  "name": "json-files-query",
  "version": "0.1.2",
  "description": "A library that enables querying of local JSON file collections.",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup ./src/index.ts",
    "test": "vitest",
    "lint": "eslint src/**/*.ts test/**/*.ts --fix",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yiwv/json-files-query.git"
  },
  "keywords": [
    "JSON",
    "query",
    "data retrieval",
    "data manipulation",
    "JavaScript",
    "library"
  ],
  "author": "yiwv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yiwv/json-files-query/issues"
  },
  "homepage": "https://github.com/yiwv/json-files-query#readme",
  "dependencies": {
    "destr": "^2.0.1",
    "unstorage": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-plugin-vitest": "^0.3.8",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
